<%-include("header")%>
<style>
    .contact-container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }
    
    .contact-title {
        font-size: 2em;
        margin-bottom: 10px;
        text-align: center;
    }
    
    .contact-email,
    .contact-linkedin {
        font-size: 1.2em;
        margin-bottom: 10px;
        text-align: center;
    }
    
    .contact-link {
        color: #f0b429;
        text-decoration: none;
    }
    
    .contact-link:hover {
        text-decoration: underline;
    }
    
    .contact-subtitle {
        font-size: 1.5em;
        margin-top: 20px;
        margin-bottom: 10px;
        text-align: center;
    }
    
    .contact-form {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    
    .contact-form-group {
        margin-bottom: 15px;
        width: 100%;
        max-width: 500px;
    }
    
    .contact-label {
        display: block;
        margin-bottom: 5px;
    }
    
    .contact-submit-button {
        padding: 10px 20px;
        font-size: 1em;
        color: #fff;
        background-color: #f0b429;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }
    
    .contact-submit-button:hover {
        background-color: #f3ab04;
    }
    
</style>
<main class="todocorner-main">
    <div class="contact-container">
        <h1 class="contact-title">Contact Us</h1>
        <p class="contact-email">Email: <a href="mailto:kripp.me@outlook.com" class="contact-link">kripp.me@outlook.com</a></p>
        <p class="contact-linkedin">Connect with me on LinkedIn: <a href="https://www.linkedin.com/in/kripa-raj-948109192/" class="contact-link">Click here</a></p>

        <h2 class="contact-subtitle">Send us your suggestions:</h2>
        <form class="contact-form" action="/contactUs" method="post">
            <div class="contact-form-group">
                <label for="name" class="contact-label">Name:</label>
                <input type="text" id="name" name="name" class="todocorner-input" required>
            </div>
            <div class="contact-form-group">
                <label for="email" class="contact-label">Email:</label>
                <input type="email" id="email" name="email" class="todocorner-input" required>
            </div>
            <div class="contact-form-group">
                <label for="suggestion" class="contact-label">Suggestion:</label>
                <textarea id="suggestion" name="description" class="todocorner-input" style="height: 3rem;" required></textarea>
            </div>
            <button type="submit" class="contact-submit-button">Submit</button>
        </form>
    </div>
</main>
<%-include("footer")%>